{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "deno",
			"command": "run",
			"problemMatcher": [
				"$deno"
			],
			"label": "deno: run",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"args": [
				"-A",
				"--watch",
				"main.ts"
			],
			"dependsOn": [
				"tsc: watch - tsconfig.json"
			]
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json",
			"dependsOn": [
				"tsc: build - tsconfig.json"
			]
		}
	]
}